{
  "name": "values.md",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run",
    "test:integration": "vitest run tests/database-pipeline.test.ts",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "seed:admin": "npx tsx scripts/seed-admin.ts",
    "seed:db": "npx tsx scripts/seed-db.ts",
    "setup": "npm run db:push && npm run seed:admin && npm run seed:db",
    "data:sync": "npx tsx scripts/data-sync.ts sync",
    "data:validate": "npx tsx scripts/data-sync.ts validate",
    "validate:csv": "npx tsx scripts/data-sync.ts validate",
    "validate:motifs": "npm run data:validate",
    "validate:templates": "npx tsx scripts/validate-templates.ts",
    "validate:critical-flows": "npm run test:e2e tests/critical-regression.test.ts",
    "benchmark:lighthouse": "npx tsx scripts/lighthouse-benchmark.ts",
    "health-check:production": "npx tsx scripts/health-check.ts --production",
    "db:migrate:production": "drizzle-kit migrate --config=drizzle.config.production.ts",
    "db:sync-production": "npm run data:sync",
    "validate": "npm run lint && npm run typecheck && npm run test:unit && npm run build",
    "pre-deploy": "npx tsx scripts/pre-deploy-validation.ts",
    "health-check": "npx tsx scripts/health-check.ts"
